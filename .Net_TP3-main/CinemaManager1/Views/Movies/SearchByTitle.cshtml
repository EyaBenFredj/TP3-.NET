@model IEnumerable<CinemaManager1.Models.Cinema.Movie>

<h2>Search Movies</h2>

@using (Html.BeginForm("SearchByTitle", "Movies", FormMethod.Get))
{
    <p>
        Title: @Html.TextBox("critere")  
        <input type="submit" value="Rechercher" /> 
    </p>
}

@if (Model != null && Model.Any())
{
    <h3>Search Results:</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Producer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Genre</td>
                    <td>@movie.Producer?.Name</td>  
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No movies found matching your search criteria.</p>
}